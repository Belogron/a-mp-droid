<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<com.mediaportal.remote.activities.actionbar.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginBottom="60dip" 
		android:background="@color/listview_background">
		<ListView android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:id="@+id/ListViewRecordings"
			android:layout_marginBottom="30dip">

		</ListView>
		<include layout="@layout/include_sliding_drawer" />
	</FrameLayout>
	<include layout="@layout/include_bottom_bar" />
</LinearLayout>
