<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:layout_height="wrap_content" android:layout_marginBottom="5dip"
	android:layout_marginTop="5dip">




	<LinearLayout android:id="@+id/LinearLayout02" android:layout_width="0dip" android:layout_weight="1" android:orientation="vertical" android:layout_height="80dip">
			<TextView android:id="@+id/TextViewProgramDate"
		android:text="@+id/TextViewProgramDate" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:layout_marginBottom="5dip"></TextView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ImageViewRecording"></ImageView>
</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="vertical" android:layout_width="0dip"
		android:layout_weight="2" android:layout_height="80dip">
		<TextView android:id="@+id/TextViewProgramName"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:textStyle="bold" android:text="@+id/TextViewProgramName"
			android:layout_marginBottom="10dip"></TextView>
		<TextView android:id="@+id/TextViewProgramDescription"
			android:layout_height="wrap_content" android:text="@+id/TextViewProgramDescription"
			android:layout_width="fill_parent"></TextView>






</LinearLayout>













	</LinearLayout>
