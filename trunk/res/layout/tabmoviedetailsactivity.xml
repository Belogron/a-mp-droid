<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollViewRoot" android:layout_height="wrap_content"
	android:layout_width="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/LinearLayoutSeriesHeader" android:layout_width="fill_parent">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/icon"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
				android:layout_marginBottom="10dip" android:layout_marginTop="10dip"
				android:id="@+id/ImageViewMoviePoster"></ImageView>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textStyle="bold"
					android:textSize="14dip" android:layout_gravity="center_vertical|center_horizontal|center"
					android:text="[Movie Title]" android:id="@+id/TextViewMovieName"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/TextViewMovieGenres"
					android:text="[Genres]"></TextView>
			</LinearLayout>



		</LinearLayout>
		<Gallery android:id="@+id/GalleryAllPosters"
			android:layout_width="fill_parent" android:layout_height="75dip"></Gallery>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/TextViewOverview"
			android:text="[Overview]"></TextView>
		<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/movie_actors"
			android:textStyle="bold" android:layout_marginBottom="10dip"
			android:layout_marginTop="10dip"></TextView>





		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/LinearLayoutActors"></LinearLayout>

	</LinearLayout>



</ScrollView>