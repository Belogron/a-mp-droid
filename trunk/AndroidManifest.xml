<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.mediaportal.remote" android:versionCode="1"
	android:versionName="0.1">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="true" android:allowClearUserData="true">
		<activity android:name="com.mediaportal.remote.activities.WelcomeScreenActivity"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="com.mediaportal.remote.activities.HomeActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="com.mediaportal.remote.activities.MediaActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="com.mediaportal.remote.activities.media.TabMoviesActivity"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.media.TabMovieDetailsActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.media.TabSeriesActivity"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.media.TabSeriesActivityGroup"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.media.TabSeriesDetailsActivity"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.media.TabEpisodesActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.media.TabSharesActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.media.TabVideosActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.MusicActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.PicturesActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.TvServerActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.TvServerOverviewActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="com.mediaportal.remote.activities.TvServerStateActivity"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.TvServerRecordingsActivity"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name="com.mediaportal.remote.activities.TvServerSchedulesActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.RemoteControlActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:name="com.mediaportal.remote.activities.StatusBarActivity"
			android:screenOrientation="portrait"></activity>

		<service android:enabled="true"
			android:name="com.mediaportal.remote.api.ItemDownloaderService"></service>

		<activity
			android:name="com.mediaportal.remote.activities.settings.SettingsActivity"
			android:screenOrientation="portrait"></activity>

		<activity
			android:name="com.mediaportal.remote.activities.settings.ClientSettingsActivity"
			android:screenOrientation="portrait"></activity>
	</application>
</manifest> 